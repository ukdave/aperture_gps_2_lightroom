#!/usr/bin/env ruby
# frozen_string_literal: true

$LOAD_PATH << "lib"

aperture_folder_name = ARGV[0]
if aperture_folder_name.nil? || aperture_folder_name.empty?
  puts "Usage: ${0} <aperture_folder_name>"
  exit 1
end

require "aperture_gps_2_lightroom"

ApertureGps2Lightroom::Main.go(aperture_folder_name)
